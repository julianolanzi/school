<div class="item">
    <div>Avatar</div>
    <div>
        <input type="text" name="avatar_url" placeholder="http://" value="{{student.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Name</div>
    <div>
        <input type="text" name="name" placeholder="Name" value="{{student.name}}">
    </div>
</div>

<div class="item">
    <div>E-mail</div>
    <div>
        <input type="text" name="email" placeholder="E-mail" value="{{student.email}}">
    </div>
</div>

<div class="item">
    <div>Yers old</div>
    <input type="date" name="birth" value="{{student.birth}}">
</div>

<div class="item">
    <div>Year of School</div>
    <div>
        <select class="custom-select" name="year">
            <option value="5F" {% if student.year == "5F" %} selected {% endif %}>
                5° Fundamentally
            </option>
            <option value="6F" {% if student.year == "6F" %} selected {% endif %}>
                6° Fundamentally
            </option>
            <option value="7F" {% if student.year == "7F" %} selected {% endif %}>
                7° Fundamentally
            </option>
            <option value="8F" {% if student.year == "8F" %} selected {% endif %}>
                8° Fundamentally
            </option>
            <option value="1M" {% if student.year == "1M" %} selected {% endif %}>
                1° high school
            </option>
            <option value="2M" {% if student.year == "2M" %} selected {% endif %}>
                2° high school
            </option>
            <option value="3M" {% if student.year == "3M" %} selected {% endif %}>
                3° high school
            </option>
            
        </select>
    </div>
</div>

<div class="item">
    <div>type of class</div>
    <div>
        <span><input type="radio" name="modo" value="Distance" {% if student.modo == 'Distance' %} checked="checked" {% endif %}>
        Distance
        </span>
        <span><input type="radio" name="modo" value="Presential"{% if student.modo == 'Presential' %} checked="checked" {% endif %}>
        Presential
        </span>
    </div>
</div>

<div class="item">
    <div>Gender</div>
    <div>
        <span><input type="radio" name="gender" value="M" {% if student.gender == 'M' %} checked="checked" {% endif %}>
            Masculino
        </span>
        <span><input type="radio" name="gender" value="F" {% if student.gender == 'F' %} checked="checked" {% endif %}>
            Feminino
        </span>
    </div>
</div>

<div class="item">
    <div>Hours for week</div>
    <div>
        <input type="number" name="hour" value="{{ student.hour }}">
    </div>
</div>



<button type="submit"> <i class="fas fa-save"></i> Save</button>