{% extends "layout.njk" %}

{% block content %}

    <div class="container table-container">
    <a href="/students/create"><i class="fas fa-user-plus"></i> New</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Student</th>
                    <th>E-mail</th>
                    <th>Hours/w</th>
                    <th>Year School</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                {% for student in students %}

                <tr>
                    <td title ="{{ student.name }}">
                    <span style="background-image: url({{student.avatar_url}})"></span>
                    {{ student.name }}</td>

                    <td>{{ student.email }}</td>
                    <td>{{ student.hour }} hours</td>
                    <td>{{ student.year }}</td>
                    

                    <td><a href="/students/{{student.id}}"><i class="fas fa-user"></i> View</a>
                    <a href="/students/{{ student.id }}/edit"><i class="fas fa-edit"></i> Edit</a>
                    </td>

                </tr>
            {% endfor %}
                
            </tbody>
    </table>
    </div>
{% endblock content %}