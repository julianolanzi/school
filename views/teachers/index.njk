{% extends "layout.njk" %}

{% block content %}

    <div class="container table-container">
    <a href="/teachers/create"><i class="fas fa-user-plus"></i> New</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Tecaher</th>
                    <th>Schooling</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                {% for teacher in teachers %}

                <tr>
                    <td title ="{{ teacher.name }}">
                    <span style="background-image: url({{teacher.avatar_url}})"></span>
                    {{ teacher.name }}</td>

                    <td>{{ teacher.schooling }}</td>
                    

                    <td><a href="/teachers/{{teacher.id}}"><i class="fas fa-user"></i> View</a>
                    <a href="/teachers/{{teacher.id}}/edit"><i class="fas fa-edit"></i> Edit</a></td>

                </tr>
            {% endfor %}
                
            </tbody>
    </table>
    </div>
{% endblock content %}